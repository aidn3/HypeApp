<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toEndOf="@+id/bflP_item_checkbox"
    android:layout_toRightOf="@+id/bflP_item_checkbox"
    android:background="?attr/selectableItemBackground"
    android:padding="10dp">

    <TextView
        android:id="@+id/SPL_item_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/SPL_item_image"
        android:layout_toRightOf="@+id/SPL_item_image"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/SPL_item_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SPL_item_text1"
        android:layout_alignStart="@+id/SPL_item_text1"
        android:layout_alignLeft="@+id/SPL_item_text1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="" />

    <ImageView
        android:id="@+id/SPL_item_image"
        android:layout_width="50dp"

        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/default_player_head"
        android:contentDescription="@null"
        android:cropToPadding="false" />

    <TextView
        android:id="@+id/SPL_item_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/SPL_item_image"
        android:layout_alignLeft="@id/SPL_item_image"
        android:layout_alignEnd="@id/SPL_item_image"
        android:layout_alignRight="@id/SPL_item_image"
        android:layout_alignBottom="@id/SPL_item_image"
        android:lines="1"
        android:textAlignment="center"
        app:autoSizeTextType="uniform" />

</RelativeLayout>
